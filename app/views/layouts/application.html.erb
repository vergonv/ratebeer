<!DOCTYPE html>
<html>
<head>
  <title>Ratebeer</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navibar">
    <%= link_to 'breweries', breweries_path %>
    <%= link_to 'beers', beers_path %>
     <%= link_to 'ratings', ratings_path %>
     <%= link_to 'users', users_path %>
     <%=link_to 'beer clubs', beer_clubs_path%>
    <%= link_to 'join a club', memberships_path %>
     


 	   
    <% if  current_user.nil? %>
    <%= link_to 'signin', signin_path %>
    <% elsif not  current_user.nil? %>
    <%= link_to current_user.username, users_path(current_user) %>
    <%= link_to 'signout', signout_path,method: :delete %>
    
<% end %>
  </div>
<%= yield %>

</body>
</html>

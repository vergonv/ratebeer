<h1>New Beer</h1>

<%= form_for(@beer) do |f| %>
  Name: <%= f.text_field :name %>
  Style: <%= f.select :style, options_for_select(@styles) %>
  Brewery: <%= f.select :brewery_id, options_from_collection_for_select(@breweries, :id, :name) %>


  <%= f.submit %>
<% end %>

<%= link_to 'Back', beers_path %>
